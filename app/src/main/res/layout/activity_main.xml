<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vietle.vietnamesetranslations.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="4"
        >
        <Button
            android:onClick="buttonClicked"
            android:id="@+id/basicgreeting"
            android:text="Greeting (1)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"

            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="0"
            android:tag="1"
            />
        <Button
            android:onClick="buttonClicked"
            android:id="@+id/bathroom"
            android:text="Bathroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"

            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="1"
            android:tag="2"
            />
        <Button
            android:onClick="buttonClicked"
            android:id="@+id/english"
            android:text="Do you &#10;speak English?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"

            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="0"
            android:tag="3"
            />
        <Button
            android:onClick="buttonClicked"
            android:id="@+id/partinggreeting"
            android:text="Greenting (2)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"

            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="1"
            android:tag="4"
            />
        <Button
            android:onClick="buttonClicked"
            android:id="@+id/please"
            android:text="Please"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"

            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="0"
            android:tag="5"
            />
        <Button
            android:onClick="buttonClicked"
            android:id="@+id/thankyou"
            android:text="Thank You"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"

            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="1"
            android:tag="6"
            />



        <Button
            android:onClick="buttonClicked"
            android:id="@+id/understand"
            android:text="Do you &#10;understand?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"

            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_column="0"
            android:tag="7"
            />

        <Button
            android:onClick="buttonClicked"
            android:id="@+id/yourewelcome"
            android:text="You're Welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"

            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_column="1"
            android:tag="8"
            />
    </GridLayout>
</android.support.constraint.ConstraintLayout>
